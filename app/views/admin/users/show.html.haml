.page-header
  %ul
    %li
      = link_to t('helpers.links.back'), admin_users_path, {class: "btn btn-default", role: "button"}
    %li
      = link_to t('helpers.submit.edit'), {action: 'edit', id: @user.id}, {class: "btn btn-primary", role: "button"}
  %h1 #{t('.title')}

.page-content
  = render partial: 'common/flash_messages'
  = render partial: 'common/user_show', locals: {user: @user}
