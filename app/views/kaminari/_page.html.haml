- if page.current?
  %li.active
    = content_tag :a, page, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), id: "kaminari-page-#{page}"
- else
  %li
    = link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), id: "kaminari-page-#{page}"
