%h1.page-header= t('.title')

= render partial: 'common/flash_messages'
#user_photos
  - @bus_stop_photos.each do |bus_stop_photo|
    .row.photo_list
      .col-md-5
        = image_tag bus_stop_photo.photo.url(:medium)
      .col-md-4
        = render partial: 'common/show_key_value', locals: {key: BusStop.human_attribute_name(:name), value: bus_stop_photo.bus_stop.try(:name)}
        = render partial: 'common/show_key_value', locals: {key: BusStop.human_attribute_name(:prefecture), value: bus_stop_photo.bus_stop.try(:prefecture).try(:name)}
        = render partial: 'common/show_key_value', locals: {key: BusStopPhoto.human_attribute_name(:created_at), value: bus_stop_photo.created_at}
      .col-md-3
        = link_to t('.bus_stop_detail'), bus_stop_photo.bus_stop, class: "btn btn-default"
        = link_to t('.delete_photo'), destroy_bus_stop_photos_path(bus_stop_photo.bus_stop_id, bus_stop_photo.id), method:'delete', data:{confirm: t('.delete_confirm')}, class:"btn btn-danger"
    %hr